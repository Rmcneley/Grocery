<div class="row" style="margin-left:-25px;height:25px;padding-top:1px;padding-right:1px;padding-bottom:1px;padding-left:10px;width:450px;margin-top:20px;">
  <div class="col-md-12" style="padding-right:19px;width:10px;height:20px;position:fixed"><i class="glyphicon glyphicon-chevron-right"></i></div>
  <div class="col-md-12" style="padding-right:15px;width:60px;">
    <div class="row" style="width:65px;">
      <div class="col-md-12" style="padding-right:0px;width:30px;padding-left:3px;height:20px;background-color:#ffedad;">Qty: </div>
      <div class="col-md-12" style="padding-right:5px;width:15px;height:20px;background-color:#ffedad;padding-left:5px;">
        <input value= {{amt}} oninput= {{action (mut amt) value="target.value"}} style="height:20px;width:30px;padding-left:3px;">
      </div>
    </div>
  </div>
  <div class="col-md-12" style="padding-right:15px;width:150px;height:20px;">
    <p style="width:140px;">{{name}}</p>
  </div>
  <div class="col-md-12" style="padding-right:0px;width:165px;height:20px;padding-left:0px;">
    <input value= {{desc}} oninput= {{action (mut desc) value="target.value"}}>
  </div>
  <div class="col-md-12" style="padding-right:0px;width:30px;height:20px;padding-left:0px;">
    <button type="button" {{action 'deleteItem' arrIndex}} class="btn-link" class="glyphicon glyphicon-remove-sign" style="height:27px;margin-top:-2px;color: black;"></button>
  </div>
</div>
